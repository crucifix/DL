{% extends '::base.html.twig' %}
{% block titre %}Inscription{% endblock %}
{% block contenu %}
<style>
        ul li{
            color:red;
        }
        hr{
            margin-top:0;
        }
        select{
            width:101%;
        }
        h4{
            margin-top:0;
        }
        textarea{
            width:100%;
            height:200px;
            resize:none;
        }
        input{
            width:98%;
        }
</style>
{% include 'SiteUtilisateurBundle:include:flash.html.twig' %}
<div class="page-header"><h3>Inscription</h3></div>
<div class="well">
    <div class="row-fluid">
        <form style="float:none;margin:0 auto;" action="{{ path('utilisateur_inscription') }}" method="POST">
        <div class="span6">
            {{ form_row(form.pseudo) }}
            {{ form_row(form.password) }}
            {{ form_row(form.rang) }}
        </div>
    </div>
    <div class="row-fluid">
        <input type="submit" class="btn btn-primary" value="Envoyer" />
        </form>
    </div>
</div>
{% endblock %}